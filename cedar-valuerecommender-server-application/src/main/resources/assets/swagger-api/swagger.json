{
  "swagger": "2.0",
  "info": {
    "title": "CEDAR Value Recommender Server API",
    "description": "CEDAR Value Recommender Server API",
    "version": "2.6.18-SNAPSHOT"
  },
  "basePath": "/command",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "Authorization",
      "description": "Your CEDAR API key, using the format 'apiKey &lt;yourApiKey&gt;'",
      "in": "header"
    }
  },
  "responses": {
    "ok": {
      "description": "Successful operation"
    },
    "bad_request": {
      "description": "Bad request"
    },
    "unauthorized": {
      "description": "Unauthorized"
    },
    "internal_error": {
      "description": "Internal server error"
    }
  },
  "paths": {
    "/recommend": {
      "post": {
        "summary": "Get recommendation",
        "description": "Get metadata recommendations for a target field.",
        "parameters": [
          {
            "name": "Input",
            "in": "body",
            "description": "user to add to the system",
            "schema": {
              "type": "object",
              "properties": {
                "templateId": {
                  "type": "string",
                  "description": "Example&#58; https://repo.metadatacenter.org/templates/8bc64av5-df6b-48c8-8c61-6c016245918e",
                  "required": false
                },
                "populatedFields": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "fieldPath": {
                        "type": "string",
                        "description": "Example&#58; disease",
                        "required": true
                      },
                      "fieldValueLabel": {
                        "type": "string",
                        "description": "Example&#58; atopic dermatitis",
                        "required": true
                      },
                      "fieldValueType": {
                        "type": "string",
                        "description": "Example&#58; atopic dermatitis",
                        "required": false
                      }
                    }
                  }
                },
                "targetField": {
                  "type": "object",
                  "properties": {
                    "fieldPath": {
                      "type": "string",
                      "description": "Example&#58; tissue"
                    }
                  }
                },
                "strictMatch": {
                  "type": "boolean",
                  "required": false
                },
                "includeDetails": {
                  "type": "boolean",
                  "description": "If set to true, it returns details about how the recommendations were generated",
                  "required": false
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/ok"
          },
          "400": {
            "$ref": "#/responses/bad_request"
          },
          "401": {
            "$ref": "#/responses/unauthorized"
          },
          "500": {
            "$ref": "#/responses/internal_error"
          }
        }
      }
    }
  }
}
